@page
@using Prototype.Data
@model SpecialElection.Areas.Special.Pages.CandidateView.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Candidate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Candidate.RaceId" />
            <div class="form-group">
                <label asp-for="Candidate.DisplayName" class="control-label"></label>
                <input asp-for="Candidate.DisplayName" class="form-control" />
                <span asp-validation-for="Candidate.DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.DisplayOrder" class="control-label"></label>
                <input asp-for="Candidate.DisplayOrder" class="form-control" />
                <span asp-validation-for="Candidate.DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.Party" class="control-label"></label>
                <select asp-for="Candidate.Party" asp-items="Html.GetEnumSelectList<PartyTypeEnum>()">
                    <option selected="selected" value="">Please select a party</option>
                </select>
                <span asp-validation-for="Candidate.Party" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.FirstName" class="control-label"></label>
                <input asp-for="Candidate.FirstName" class="form-control" />
                <span asp-validation-for="Candidate.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.MiddleName" class="control-label"></label>
                <input asp-for="Candidate.MiddleName" class="form-control" />
                <span asp-validation-for="Candidate.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.LastName" class="control-label"></label>
                <input asp-for="Candidate.LastName" class="form-control" />
                <span asp-validation-for="Candidate.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-RaceId="@Model.Candidate.RaceId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
